<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmaster">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMaster">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.UpdateActivity"
            android:exported="false"
            android:label="Update Task" />
        <activity
            android:name=".ui.RecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SettingActivity"
            android:exported="false"
            android:label="@string/action_settings"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.TaskDetailsActivity"
            android:exported="false"
            android:label="@string/title_according_to_task_title"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.AllTasksActivity"
            android:exported="false"
            android:label="All Tasks"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.AddTaskActivity"
            android:exported="false"
            android:label="Add Task"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>