<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingActivity">


    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:backgroundTint="#3BACB6"
        android:textColorHint="#3BACB6"
        android:textColorHighlight="@color/teal_200"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:hint="@string/edit_text_username"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_no_of_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:backgroundTint="#3BACB6"
        android:textColorHint="#3BACB6"
        android:textColorHighlight="@color/teal_200"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints=""
        android:hint="@string/edit_text_password"
        android:inputType="number"
        android:layout_marginTop="30dp"
        />

    <Spinner
        android:id="@+id/task_team_spinner_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/edit_text_no_of_task"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_no_of_task"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/save_user_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_no_of_task"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="serif"
        android:text="@string/save_username_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_team_spinner_setting" />


</androidx.constraintlayout.widget.ConstraintLayout>